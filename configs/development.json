{
  "buildtools": {
    "run": false,
    "path": "files/BuildTools/",
    "FileName": "Build.jar"
  },
  "minecraftserv": {
    "path": "files/MinecraftServer/",
    "FileName": "server.jar",
    "minRam": "2G",
    "maxRam": "4G",
    "AutoRestart": false,
    "AutoStart": false,
    "worldsDir": "../worlds/",
    "pluginsDir": "../plugins/",
    "configDirectory": "../settings/",
    "backupDir": "files/backups/"
  },
  "colors": {
    "silly": "rainbow",
    "input": "grey",
    "verbose": "cyan",
    "prompt": "grey",
    "info": "green",
    "data": "grey",
    "help": "cyan",
    "warn": "yellow",
    "debug": "blue",
    "error": "red",
    "notification": "cyan",
    "buildtools": "blue"
  },
  "schedule": [
    {
      "every": 7200,
      "actions": [
        {
          "action": "command",
          "command": "say Server going for restart in 10 seconds",
          "wait": 10
        },
        {
          "action": "stop"
        },
        {
          "action": "backup",
          "items": [
            "worlds",
            "plugins",
            "settings",
            "server"
          ]
        },
        {
          "action": "updatePlugins"
        },
        {
          "action": "start"
        }
      ]
    }
  ]
}