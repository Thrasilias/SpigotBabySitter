{
  "rest": {
    "server" : {
      "port": 8080
    },
    "authentication": {
      "username": {
        "password": "password"
      }
    }
  },
  "buildtools": {
    "run": false,
    "path": "files/BuildTools/",
    "FileName": "Build.jar"
  },
  "minecraftserv": {
    "path": "files/MinecraftServer/",
    "FileName": "server.jar",
    "minRam": "2G",
    "maxRam": "4G",
    "AutoRestart": false,
    "AutoStart": false,
    "worldsDir": "../worlds/",
    "pluginsDir": "../plugins/",
    "configDirectory": "../settings/"
  },
  "schedule": [
    {
      "time": "1:00",
      "actions": [
        {"action": "stop"},
        {
          "action": "backup",
          "items": ["worlds","plugins","configs","server"]
        },
        {
          "action": "updatePlugins"
        },
        {"action": "start"}
      ]
    }
  ]
}