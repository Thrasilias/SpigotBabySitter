{
  "buildtools": {
    "run": false,
    "path": "files/BuildTools/",
    "FileName": "Build.jar"
  },
  "minecraftserv": {
    "path": "files/MinecraftServer/",
    "FileName": "server.jar",

    "minRam": "2G",
    "maxRam": "4G",

    "host": "0.0.0.0",
    "port": 25565,

    "maxPlayers": 1000,

    "AutoRestart": false,
    "AutoStart": false,

    "worldsDir": "../worlds/",
    "pluginsDir": "../plugins/",
    "configDirectory": "../settings/",
    "backupDir": "files/backups/"
  },
  "fakeServer": {
    "autoStart": true,
    "gameMode": 1,
    "dimension": 1,
    "difficulty": 0,
    "joinMessage": "Server is currently rebooting. Check back in a bit",
    "motd": "Server is currently rebooting. Check back in a bit"
  },
  "colors": {
    "silly": "rainbow",
    "input": "grey",
    "verbose": "cyan",
    "prompt": "grey",
    "info": "green",
    "data": "grey",
    "help": "cyan",
    "warn": "yellow",
    "debug": "blue",
    "error": "red",
    "notification": "cyan",
    "buildtools": "blue"
  },
  "backup": {
    "defaultItems": [
      "worlds",
      "plugins",
      "settings",
      "server"
    ],
    "useTar": true,
    "compress": false
  },
  "alerts": {
    "services": ["email"],
    "email": {

    }
  },
  "schedule": [
    {
      "every": 7200,
      "actions": [
        {
          "action": "command",
          "command": "say Server going for restart in 10 seconds",
          "wait": 10
        },
        {
          "action": "stop"
        },
        {
          "action": "backup",
          "items": [
            "worlds",
            "plugins",
            "settings",
            "server"
          ]
        },
        {
          "action": "updatePlugins"
        },
        {
          "action": "start"
        }
      ]
    }
  ]
}